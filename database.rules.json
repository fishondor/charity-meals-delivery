{
  "rules": {
    ".read": false,
    ".write": false,
    "deliveries": {
      ".read": "auth.uid != null && root.child('admins/' + auth.uid).exists() && query.orderByChild == 'ownerId' && query.equalTo == auth.uid",
      "$deliveryId": {
        ".read": "auth.uid != null && root.child('admins/' + auth.uid).exists() && auth.uid == data.child('ownerId').val()",
        ".write": "auth.uid != null && root.child('admins/' + auth.uid).exists() && auth.uid == newData.child('ownerId').val()",
        "date": {
          ".read": "auth.uid != null"
        },
        "description": {
          ".read": "auth.uid != null"
        },
        "timeOptions": {
          ".read": "auth.uid != null"
        },
        "carriers": {
          "$carrierId": {
            ".read": "auth.uid == $carrierId",
            ".write": "!data.exists() && auth.uid == $carrierId"
          }
        },
        "groups": {
          "$groupId": {
            "pickups": {
              "$pickupIndex": {
                "done": {
                  ".write": "auth != null && auth.uid === root.child('deliveries/' + $deliveryId + '/groups/' + $groupId + '/carrier').val()",
                  ".validate": "newData.isBoolean()"
                }
              }
            },
            "destination": {
              "done": {
                ".write": "auth != null && auth.uid === root.child('deliveries/' + $deliveryId + '/groups/' + $groupId + '/carrier').val()",
                ".validate": "newData.isBoolean()"
              }
            }
          }
        }
      }
    },
    "destinations": {
      "$ownerId": {
        ".read": "root.child('admins/' + auth.uid).exists() && auth.uid === $ownerId",
        ".write": "root.child('admins/' + auth.uid).exists() && auth.uid === $ownerId"
      }
    }
  }
}